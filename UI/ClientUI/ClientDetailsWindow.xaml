<Window x:Class="Sem3_kurs.ClientOrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заявки клиента"
        Height="400"
        Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Заявки клиента" 
                       FontSize="16" 
                       FontWeight="Bold"/>
            <TextBlock x:Name="TxtClientName" 
                       FontSize="14" 
                       Foreground="#3498db"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Список заявок -->
        <DataGrid Grid.Row="1" 
                  x:Name="OrdersDataGrid" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding RequestType}" Width="80"/>
                <DataGridTextColumn Header="Район" Binding="{Binding District}" Width="120"/>
                <DataGridTextColumn Header="Комнат" Binding="{Binding Rooms}" Width="60"/>
                <DataGridTextColumn Header="Цена" Width="120">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{0} - {1}">
                            <Binding Path="PriceMin" StringFormat="N0"/>
                            <Binding Path="PriceMax" StringFormat="N0"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding CreatedDate, StringFormat=d}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button Content="Добавить заявку" 
                    Width="100" 
                    Height="30"
                    Margin="0,0,10,0"
                    Click="BtnAddOrder_Click"/>

            <Button Content="Закрыть" 
                    Width="80" 
                    Height="30"
                    Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>