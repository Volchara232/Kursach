<Window x:Class="Sem3_kurs.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sem3_kurs"
        mc:Ignorable="d"
        Title="Регистрация нового клиента"
        Height="500"
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Height" Value="28"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip" 
                            Value="{Binding RelativeSource={RelativeSource Self}, 
                                   Path=(Validation.Errors)[0].ErrorContent}"/>
                    <Setter Property="Background" Value="LightPink"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,5,0,2"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Регистрация клиента" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>

        <!-- Форма -->
        <StackPanel Grid.Row="1">
            <GroupBox Header="Личные данные" Margin="0,0,0,10">
                <StackPanel Margin="5">
                    <TextBlock Text="ФИО*"/>
                    <TextBox x:Name="TxtFullName" 
                             Text="{Binding FullName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Адрес"/>
                    <TextBox x:Name="TxtAddress" 
                             Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Телефон*"/>
                    <TextBox x:Name="TxtPhone" 
                             Text="{Binding Phone, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Email"/>
                    <TextBox x:Name="TxtEmail" 
                             Text="{Binding Email, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Регистрационный номер (формат: 123/2024)"/>
                    <TextBox x:Name="TxtRegistrationNumber" 
                             Text="{Binding RegistrationNumber, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </GroupBox>

            <!-- Сообщения об ошибках -->
            <Border BorderBrush="Red" 
                    BorderThickness="1" 
                    Background="#FFF0F0" 
                    CornerRadius="5" 
                    Padding="10" 
                    Margin="0,10,0,0"
                    Visibility="{Binding HasErrors, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="Red" 
                           TextWrapping="Wrap"/>
            </Border>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button Content="Отмена" 
                    Width="80" 
                    Height="30"
                    Margin="0,0,10,0"
                    Click="BtnCancel_Click"/>

            <Button Content="Сохранить" 
                    Width="80" 
                    Height="30"
                    IsDefault="True"
                    IsEnabled="{Binding IsValid}"
                    Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>