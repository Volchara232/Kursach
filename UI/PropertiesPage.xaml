<Page x:Class="Sem3_kurs.PropertiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Объекты недвижимости">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Объекты недвижимости" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"/>

            <Button Content="Добавить объект" 
                    Margin="20,0,0,0" 
                    Padding="10,5"
                    Click="BtnAddProperty_Click"/>

            <Button Content="Только доступные" 
                    Margin="10,0,0,0" 
                    Padding="10,5"
                    Click="BtnFilterAvailable_Click"/>
        </StackPanel>

        <!-- Список объектов -->
        <ListView Grid.Row="1" 
                  x:Name="PropertiesListView" 
                  Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Тип" 
                                    DisplayMemberBinding="{Binding Type}" 
                                    Width="100"/>
                    <GridViewColumn Header="Район" 
                                    DisplayMemberBinding="{Binding District}" 
                                    Width="120"/>
                    <GridViewColumn Header="Комнат" 
                                    DisplayMemberBinding="{Binding Rooms}" 
                                    Width="70"/>
                    <GridViewColumn Header="Площадь" 
                                    DisplayMemberBinding="{Binding TotalArea}" 
                                    Width="80"/>
                    <GridViewColumn Header="Цена" 
                                    DisplayMemberBinding="{Binding Price}" 
                                    Width="100"/>
                    <GridViewColumn Header="Тип сделки" 
                                    DisplayMemberBinding="{Binding DealType}" 
                                    Width="100"/>
                    <GridViewColumn Header="Доступен" 
                                    DisplayMemberBinding="{Binding IsAvailable}" 
                                    Width="80"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>