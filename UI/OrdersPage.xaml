<Page x:Class="Sem3_kurs.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Заявки">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Заявки клиентов" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"/>

            <Button Content="Новая заявка" 
                    Margin="20,0,0,0" 
                    Padding="10,5"
                    Click="BtnAddOrder_Click"/>

            <Button Content="Активные" 
                    Margin="10,0,0,0" 
                    Padding="10,5"
                    Click="BtnShowActive_Click"/>
        </StackPanel>

        <!-- Список заявок -->
        <ListView Grid.Row="1" 
                  x:Name="OrdersListView" 
                  Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" 
                                    DisplayMemberBinding="{Binding Id}" 
                                    Width="50"/>
                    <GridViewColumn Header="Клиент" 
                                    DisplayMemberBinding="{Binding ClientName}" 
                                    Width="150"/>
                    <GridViewColumn Header="Тип" 
                                    DisplayMemberBinding="{Binding RequestType}" 
                                    Width="100"/>
                    <GridViewColumn Header="Район" 
                                    DisplayMemberBinding="{Binding District}" 
                                    Width="120"/>
                    <GridViewColumn Header="Цена от" 
                                    DisplayMemberBinding="{Binding PriceMin}" 
                                    Width="80"/>
                    <GridViewColumn Header="Статус" 
                                    DisplayMemberBinding="{Binding Status}" 
                                    Width="120"/>
                    <GridViewColumn Header="Дата" 
                                    DisplayMemberBinding="{Binding CreatedDate}" 
                                    Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>