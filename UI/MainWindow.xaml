<Window x:Class="Sem3_kurs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Риэлторское агентство" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель навигации -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Background="#f0f0f0" 
                    Height="40">

            <Button x:Name="BtnClients" 
                    Content="Клиенты" 
                    Margin="5" 
                    Padding="10,5" 
                    Click="BtnClients_Click"/>

            <Button x:Name="BtnOwners" 
                    Content="Владельцы" 
                    Margin="5" 
                    Padding="10,5" 
                    Click="BtnOwners_Click"/>

            <Button x:Name="BtnProperties" 
                    Content="Объекты" 
                    Margin="5" 
                    Padding="10,5" 
                    Click="BtnProperties_Click"/>



            <Button x:Name="BtnOrders" 
                    Content="Заявки" 
                    Margin="5" 
                    Padding="10,5" 
                    Click="BtnOrders_Click"/>

            <Button x:Name="BtnStatistics" 
                    Content="Статистика" 
                    Margin="5" 
                    Padding="10,5" 
                    Click="BtnStatistics_Click"/>

            <Button x:Name="BtnSave" 
                    Content="Сохранить данные" 
                    Margin="5" 
                    Padding="10,5" 
                    Click="BtnSave_Click"/>

            <Button x:Name="BtnLoad" 
                    Content="Загрузить данные" 
                    Margin="5" 
                    Padding="10,5" 
                    Click="BtnLoad_Click"/>

        </StackPanel>

        <!-- Основная область контента -->
        <Frame x:Name="MainFrame" 
               Grid.Row="1" 
               NavigationUIVisibility="Hidden"
               Margin="10"/>

    </Grid>
</Window>