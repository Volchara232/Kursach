<Window x:Class="Sem3_kurs.AddOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:enums="clr-namespace:Sem3_kurs.Enums"
        Title="Новая заявка"
        Height="550"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <ObjectDataProvider x:Key="RequestTypes" 
                            MethodName="GetValues" 
                            ObjectType="{x:Type enums:RequestType}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:RequestType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="DealTypes" 
                            MethodName="GetValues" 
                            ObjectType="{x:Type enums:DealType}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:DealType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="OrderStatuses" 
                            MethodName="GetValues" 
                            ObjectType="{x:Type enums:OrderStatus}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:OrderStatus"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Создание новой заявки" 
                       FontSize="18" 
                       FontWeight="Bold"/>
            <TextBlock x:Name="TxtClientName" 
                       FontSize="14" 
                       Foreground="#3498db"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Форма -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="Основные параметры" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <TextBlock Text="Тип заявки*" Margin="0,0,0,2"/>
                        <ComboBox x:Name="CmbRequestType" 
                                  ItemsSource="{Binding Source={StaticResource RequestTypes}}"
                                  SelectedItem="{Binding RequestType}"
                                  Height="28"
                                  Margin="0,0,0,10"/>

                        <TextBlock Text="Тип сделки*" Margin="0,0,0,2"/>
                        <ComboBox x:Name="CmbDealType" 
                                  ItemsSource="{Binding Source={StaticResource DealTypes}}"
                                  SelectedItem="{Binding DealType}"
                                  Height="28"
                                  Margin="0,0,0,10"/>

                        <TextBlock Text="Статус заявки" Margin="0,0,0,2"/>
                        <ComboBox x:Name="CmbStatus" 
                                  ItemsSource="{Binding Source={StaticResource OrderStatuses}}"
                                  SelectedItem="{Binding Status}"
                                  Height="28"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Параметры объекта" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <TextBlock Text="Район" Margin="0,0,0,2"/>
                        <TextBox x:Name="TxtDistrict" 
                                 Height="28"
                                 Text="{Binding District}"
                                 Margin="0,0,0,10"/>

                        <TextBlock Text="Количество комнат" Margin="0,0,0,2"/>
                        <TextBox x:Name="TxtRooms" 
                                 Height="28"
                                 Text="{Binding Rooms}"
                                 Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal">
                            <StackPanel Width="200">
                                <TextBlock Text="Минимальная площадь (м²)" Margin="0,0,0,2"/>
                                <TextBox x:Name="TxtAreaMin" 
                                         Height="28"
                                         Text="{Binding TotalAreaMin}"
                                         Margin="0,0,10,10"/>
                            </StackPanel>

                            <StackPanel Width="200">
                                <TextBlock Text="Максимальная площадь (м²)" Margin="0,0,0,2"/>
                                <TextBox x:Name="TxtAreaMax" 
                                         Height="28"
                                         Text="{Binding TotalAreaMax}"
                                         Margin="0,0,0,10"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <StackPanel Width="200">
                                <TextBlock Text="Минимальная цена (руб.)" Margin="0,0,0,2"/>
                                <TextBox x:Name="TxtPriceMin" 
                                         Height="28"
                                         Text="{Binding PriceMin}"
                                         Margin="0,0,10,10"/>
                            </StackPanel>

                            <StackPanel Width="200">
                                <TextBlock Text="Максимальная цена (руб.)" Margin="0,0,0,2"/>
                                <TextBox x:Name="TxtPriceMax" 
                                         Height="28"
                                         Text="{Binding PriceMax}"
                                         Margin="0,0,0,10"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Дополнительные условия" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <TextBlock Text="Особые условия" Margin="0,0,0,2"/>
                        <TextBox x:Name="TxtSpecialConditions" 
                                 Height="60"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Text="{Binding SpecialConditions}"
                                 Margin="0,0,0,10"/>

                        <CheckBox x:Name="ChkIsSpecial" 
                                  Content="Специальный заказ"
                                  IsChecked="{Binding IsSpecial}"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button Content="Отмена" 
                    Width="80" 
                    Height="30"
                    Margin="0,0,10,0"
                    Click="BtnCancel_Click"/>

            <Button Content="Создать" 
                    Width="80" 
                    Height="30"
                    IsDefault="True"
                    Click="BtnCreate_Click"/>
        </StackPanel>
    </Grid>
</Window>