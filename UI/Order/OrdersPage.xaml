<Page x:Class="Sem3_kurs.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:enums="clr-namespace:Sem3_kurs.Enums"
      Title="Заявки">

    <Page.Resources>
        <ObjectDataProvider x:Key="RequestTypes" 
                            MethodName="GetValues" 
                            ObjectType="{x:Type enums:RequestType}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:RequestType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="DealTypes" 
                            MethodName="GetValues" 
                            ObjectType="{x:Type enums:DealType}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:DealType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="OrderStatuses" 
                            MethodName="GetValues" 
                            ObjectType="{x:Type enums:OrderStatus}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:OrderStatus"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Заявки клиентов" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"/>

            <Button Content="➕ Новая заявка" 
                    Margin="20,0,0,0" 
                    Padding="10,5"
                    Click="BtnAddOrder_Click"
                    Background="#2ecc71"
                    Foreground="White"/>

            <Button Content="🔍 Подобрать объекты" 
                    Margin="10,0,0,0" 
                    Padding="10,5"
                    Click="BtnMatchProperties_Click"
                    Background="#3498db"
                    Foreground="White"/>
            <Button Content="💼 Оформить сделку" 
        Margin="10,0,0,0" 
        Padding="10,5"
        Click="BtnCreateDeal_Click"
        Background="#9b59b6"
        Foreground="White"/>
        </StackPanel>

        <!-- Таблица заявок -->
        <DataGrid Grid.Row="1" 
                  x:Name="OrdersDataGrid" 
                  Margin="10"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="True"
                  ItemsSource="{Binding}"
                  PreviewKeyDown="OrdersDataGrid_PreviewKeyDown"
                  CellEditEnding="OrdersDataGrid_CellEditEnding">

            <DataGrid.Columns>
                <!-- ID -->
                <DataGridTextColumn Header="ID" 
                                    Binding="{Binding Id}" 
                                    Width="50"
                                    IsReadOnly="True"/>

                <!-- Клиент -->
                <DataGridTextColumn Header="Клиент" 
                                    Binding="{Binding Client.FullName}"
                                    Width="150"
                                    IsReadOnly="True"/>

                <!-- Тип заявки -->
                <DataGridComboBoxColumn Header="Тип" 
                                        SelectedItemBinding="{Binding RequestType, UpdateSourceTrigger=PropertyChanged}"
                                        Width="100">
                    <DataGridComboBoxColumn.ElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource" Value="{Binding Source={StaticResource RequestTypes}}"/>
                            <Setter Property="IsReadOnly" Value="True"/>
                        </Style>
                    </DataGridComboBoxColumn.ElementStyle>
                    <DataGridComboBoxColumn.EditingElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource" Value="{Binding Source={StaticResource RequestTypes}}"/>
                        </Style>
                    </DataGridComboBoxColumn.EditingElementStyle>
                </DataGridComboBoxColumn>

                <!-- Район -->
                <DataGridTextColumn Header="Район" 
                                    Binding="{Binding District, UpdateSourceTrigger=PropertyChanged}"
                                    Width="120"/>

                <!-- Комнат -->
                <DataGridTextColumn Header="Комнат" 
                                    Binding="{Binding Rooms, UpdateSourceTrigger=PropertyChanged}"
                                    Width="60"/>

                <!-- Цена от -->
                <DataGridTextColumn Header="Цена от" 
                                    Binding="{Binding PriceMin, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}"
                                    Width="80"/>

                <!-- Цена до -->
                <DataGridTextColumn Header="Цена до" 
                                    Binding="{Binding PriceMax, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}"
                                    Width="80"/>

                <!-- Статус -->
                <DataGridComboBoxColumn Header="Статус" 
                                        SelectedItemBinding="{Binding Status, UpdateSourceTrigger=PropertyChanged}"
                                        Width="120">
                    <DataGridComboBoxColumn.ElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource" Value="{Binding Source={StaticResource OrderStatuses}}"/>
                            <Setter Property="IsReadOnly" Value="True"/>
                        </Style>
                    </DataGridComboBoxColumn.ElementStyle>
                    <DataGridComboBoxColumn.EditingElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource" Value="{Binding Source={StaticResource OrderStatuses}}"/>
                        </Style>
                    </DataGridComboBoxColumn.EditingElementStyle>

                    <!-- Стиль для отображения статуса -->
                    <DataGridComboBoxColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Foreground" Value="{Binding Status, Converter={StaticResource StatusToColorConverter}}"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridComboBoxColumn.CellStyle>
                </DataGridComboBoxColumn>

                <!-- Дата -->
                <DataGridTextColumn Header="Дата" 
                                    Binding="{Binding CreatedDate, StringFormat=d}" 
                                    Width="80"
                                    IsReadOnly="True"/>
            </DataGrid.Columns>

            <!-- Подсветка строк с ошибками -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsValid}" Value="False">
                            <Setter Property="Background" Value="#FFF0F0"/>
                            <Setter Property="ToolTip" Value="Исправьте ошибки в данных"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <!-- Подсказка для пользователя -->
            <DataGrid.ToolTip>
                <TextBlock>
                    <Run Text="• Двойной клик по ячейке - редактирование"/>
                    <LineBreak/>
                    <Run Text="• Выделите строку и нажмите Delete для удаления"/>
                    <LineBreak/>
                    <Run Text="• Нажмите 'Подобрать объекты' для поиска подходящей недвижимости"/>
                </TextBlock>
            </DataGrid.ToolTip>
        </DataGrid>
    </Grid>
</Page>