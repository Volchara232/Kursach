<Page x:Class="Sem3_kurs.PropertiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:enums="clr-namespace:Sem3_kurs.Enums"
      Title="Объекты недвижимости">

    <Page.Resources>
        <ObjectDataProvider x:Key="DealTypes" 
                            MethodName="GetValues" 
                            ObjectType="{x:Type enums:DealType}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:DealType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Объекты недвижимости" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"/>

            <Button Content="➕ Добавить объект" 
                    Margin="20,0,0,0" 
                    Padding="10,5"
                    Click="BtnAddProperty_Click"
                    Background="#2ecc71"
                    Foreground="White"/>
        </StackPanel>

        <!-- Таблица объектов -->
        <DataGrid Grid.Row="1" 
                  x:Name="PropertiesDataGrid" 
                  Margin="10"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="True"
                  ItemsSource="{Binding}"
                  PreviewKeyDown="PropertiesDataGrid_PreviewKeyDown"
                  CellEditEnding="PropertiesDataGrid_CellEditEnding">
           
            <DataGrid.Columns>
                <!-- ID -->
                <DataGridTextColumn Header="ID" 
                                    Binding="{Binding Id}" 
                                    Width="50"
                                    IsReadOnly="True"/>

                <!-- Тип -->
                <DataGridTextColumn Header="Тип" 
                                    Binding="{Binding Type, UpdateSourceTrigger=PropertyChanged}"
                                    Width="100"/>

                <!-- Адрес -->
                <DataGridTextColumn Header="Адрес" 
                                    Binding="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                                    Width="200">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Район -->
                <DataGridTextColumn Header="Район" 
                                    Binding="{Binding District, UpdateSourceTrigger=PropertyChanged}"
                                    Width="120"/>

                <!-- Комнат -->
                <DataGridTextColumn Header="Комнат" 
                                    Binding="{Binding Rooms, UpdateSourceTrigger=PropertyChanged}"
                                    Width="60"/>

                <!-- Площадь -->
                <DataGridTextColumn Header="Площадь" 
                                    Binding="{Binding TotalArea, UpdateSourceTrigger=PropertyChanged}"
                                    Width="80"/>

                <!-- Цена -->
                <DataGridTextColumn Header="Цена" 
                                    Binding="{Binding Price, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}"
                                    Width="100"/>

                <!-- Тип сделки -->
                <DataGridComboBoxColumn Header="Тип сделки" 
                                        SelectedItemBinding="{Binding DealType, UpdateSourceTrigger=PropertyChanged}"
                                        Width="100">
                    <DataGridComboBoxColumn.ElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource" Value="{Binding Source={StaticResource DealTypes}}"/>
                            <Setter Property="IsReadOnly" Value="True"/>
                        </Style>
                    </DataGridComboBoxColumn.ElementStyle>
                    <DataGridComboBoxColumn.EditingElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource" Value="{Binding Source={StaticResource DealTypes}}"/>
                        </Style>
                    </DataGridComboBoxColumn.EditingElementStyle>
                </DataGridComboBoxColumn>

                <!-- Доступность -->
                <DataGridCheckBoxColumn Header="Доступен" 
                                        Binding="{Binding IsAvailable, UpdateSourceTrigger=PropertyChanged}"
                                        Width="80"/>

                <!-- Владелец -->
                <DataGridTextColumn Header="Владелец" 
                                    Binding="{Binding Owner.FullName}"
                                    Width="150"
                                    IsReadOnly="True"/>
            </DataGrid.Columns>

            <!-- Подсветка строк с ошибками -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsValid}" Value="False">
                            <Setter Property="Background" Value="#FFF0F0"/>
                            <Setter Property="ToolTip" Value="Исправьте ошибки в данных"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <!-- Подсказка для пользователя -->
            <DataGrid.ToolTip>
                <TextBlock>
                    <Run Text="• Двойной клик по ячейке - редактирование"/>
                    <LineBreak/>
                    <Run Text="• Выделите строку и нажмите Delete для удаления"/>
                    <LineBreak/>
                    <Run Text="• Тип сделки: Rent - аренда, Sale - продажа"/>
                </TextBlock>
            </DataGrid.ToolTip>
        </DataGrid>
    </Grid>
</Page>