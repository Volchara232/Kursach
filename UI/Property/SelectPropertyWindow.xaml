<Window x:Class="Sem3_kurs.SelectPropertyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор объекта недвижимости"
        Height="400"
        Width="500"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Выберите объект для оформления сделки:"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <ListBox Grid.Row="1" 
                 x:Name="PropertiesListBox"
                 Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock Text="{Binding Address}" 
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding Type}" 
                                   Foreground="Gray"/>
                        <TextBlock Text="Количество комнат:" 
                                   FontSize="10"/>
                        <TextBlock Text="{Binding Rooms}" 
                                   FontWeight="Bold"
                                   Foreground="Blue"/>
                        <TextBlock Text="Цена:" 
                                   FontSize="10"/>
                        <TextBlock Text="{Binding Price, StringFormat='{}{0:N0} руб.'}" 
                                   FontWeight="Bold"
                                   Foreground="Green"/>
                        <TextBlock Text="Владелец:" 
                                   FontSize="10"/>
                        <TextBlock Text="{Binding Owner.FullName, FallbackValue='Не указан'}" 
                                   Foreground="DarkBlue"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Отмена" 
                    Width="80" 
                    Height="30"
                    Margin="0,0,10,0"
                    Click="BtnCancel_Click"/>

            <Button Content="Выбрать" 
                    Width="80" 
                    Height="30"
                    IsDefault="True"
                    Click="BtnSelect_Click"/>
        </StackPanel>
    </Grid>
</Window>