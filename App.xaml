<Application x:Class="Sem3_kurs.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Sem3_kurs.Converters"
             xmlns:enums="clr-namespace:Sem3_kurs.Enums"
             StartupUri="UI\MainWindow.xaml">

    <Application.Resources>
        <!-- Конвертеры -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:NullToBooleanConverter x:Key="NullToBooleanConverter"/>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>

        <!-- Enum ресурсы ДОЛЖНЫ БЫТЬ ЗДЕСЬ -->
        <ObjectDataProvider x:Key="RequestTypes" 
                            MethodName="GetValues" 
                            ObjectType="{x:Type enums:RequestType}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:RequestType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="DealTypes" 
                            MethodName="GetValues" 
                            ObjectType="{x:Type enums:DealType}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:DealType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="OrderStatuses" 
                            MethodName="GetValues" 
                            ObjectType="{x:Type enums:OrderStatus}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:OrderStatus"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <!-- Стили -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Application.Resources>
</Application>